<h1>All Posts</h1>
<% if @posts.any? %>
    <% @posts.each do |post| %>
        <div>
            <h2><%= post.title %> </h2>
        </div>
        <div>
            <p><%= post.body %></p>
        </div>
        <div>
            <small>
                Posted <%= time_ago_in_words(post.created_at) %>
                <% if member_signed_in? %>
                    by <b><%= post.member.email %></b>
                <% end %>
            </small>
        </div>

    <% end %>
<% else %>
    <p>No posts yet. <%= link_to "Let's create a new post", new_post_path %></p>
<% end %>